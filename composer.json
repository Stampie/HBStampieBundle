{
    "name": "henrikbjorn/stampie-bundle",
    "description": "This bundle provides integration for Stampie Email Library",
    "keywords": ["symfony", "stampie", "email"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [{
        "name" : "Henrik Bj√∏rnskov",
        "email" : "henrik@bjrnskov.dk"
    }],
    "require": {
        "php"                          : "^5.4 || ^7.0",
        "symfony/console"              : "^2.7 || ^3.0 || ^4.0",
        "symfony/dependency-injection" : "^2.7 || ^3.0 || ^4.0",
        "symfony/http-foundation"      : "^2.7 || ^3.0 || ^4.0",
        "stampie/stampie"              : "^1.0@beta"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.4",
        "php-http/curl-client": "^1.7",
        "stampie/extra": "^1.0@beta",
        "symfony/phpunit-bridge": "^4.0"
    },
    "suggest": {
        "stampie/extra": "to have event-based hooks in the mailer",
        "php-http/httplug-bundle": "for easier HTTP clients configuration"
    },
    "autoload": {
        "psr-4": {
            "HB\\StampieBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
